{
  "manifest_version": 3,
  "name": "SignBridge - Sign Language Translator",
  "version": "1.0.0",
  "description": "Real-time sign language translation for video calls on Google Meet, Zoom Web, and MS Teams Web",
  "action": {
    "default_popup": "popup.html",
    "default_title": "SignBridge Controls",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://meet.google.com/*",
    "*://*.zoom.us/*",
    "*://teams.microsoft.com/*",
    "*://*.teams.microsoft.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://meet.google.com/*",
        "*://*.zoom.us/*",
        "*://teams.microsoft.com/*",
        "*://*.teams.microsoft.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "model/*",
        "overlay.js",
        "tts.js",
        "model/gesture.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
